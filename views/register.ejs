<% include partials/head %>
    <body id="clrblk">
        <div>
            <div class="container full-page-outer">
                <div class="row justify-content-md-center">
                    <div id="loginbox" class="mainbox mt-5 col-md-6">
                        <div class="panel panel-info">
                            <div class="panel-heading">
                                <h2>Get started</h2>
                                <p>Start with a username. Your username is how you'll be known on Smart city</p>
                            </div>

                            <div class="panel-body">
                                        <form id="loginform" class="form-horizontal" role="form" method="post" action="/login">

                                            <div style="margin-bottom: 25px" class="input-group">
                                                <span class="input-group-addon">
                                                    <i class="glyphicon glyphicon-user"></i>
                                                </span>
                                                <input id="login-username" type="text" class="form-control" name="user_name" value="" placeholder="username">
                                            </div>


                                            <div class="form-group">
                                                <!-- Button -->
                                                <div class="controls">
                                                    <button id="btn-register-step-one" type="submit" class="btn btn-primary">Continue</button>
                                                </div>
                                            </div>


                                            <div class="form-group">
                                                <div class="control">
                                                    <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%">
                                                        Do you already have an account?
                                                        <a href="/login">
                                                            Sign in
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% include partials/footer %>
    </body>